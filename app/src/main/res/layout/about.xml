<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/textview1"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="About ZCamera"
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:layout_weight="1"/>
			<ImageView
				android:id="@+id/close"
				android:focusable="false"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:padding="5dp"
				android:src="@drawable/close_black"
				android:scaleType="centerCrop"/>
		</LinearLayout>
		<TextView
			android:id="@+id/textview2"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="ZCamera is an opensource Android Project, that help programmer(s) to make their Own Camera without using the &quot;Camera Intent&quot; anymore.\n\nmnprps:\nTake a picture without opening other application just for taking a picture.\n\nRecommended: for Social Media proj."
			android:textSize="11sp"
			android:textColor="#757575"/>
		<TextView
			android:id="@+id/textview7"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="5dp"
			android:paddingTop="2dp"
			android:paddingRight="5dp"
			android:paddingBottom="2dp"
			android:text="Created with ❤ by MrZ for Android Devs, especially for beginners."
			android:textSize="10sp"
			android:textStyle="bold"
			android:textColor="#757575"/>
		<TextView
			android:id="@+id/textview6"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:text="See also"
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="#000000"/>
		<LinearLayout
			android:id="@+id/docs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:padding="5dp"
			android:background="#FAFAFA"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageview2"
				android:focusable="false"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:padding="3dp"
				android:src="@drawable/docs"
				android:scaleType="centerCrop"/>
			<TextView
				android:id="@+id/textview3"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Documentation"
				android:textSize="14sp"
				android:textColor="#9E9E9E"/>
		</LinearLayout>
		<LinearLayout

			android:id="@+id/viewme"
			android:layout_width="match_parent"
			android:layout_height="30dp"
			android:layout_marginTop="2dp"
			android:padding="5dp"
			android:background="#FAFAFA"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageview3"
				android:focusable="false"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:padding="3dp"
				android:src="@drawable/github"
				android:scaleType="centerCrop"/>
			<TextView
				android:id="@+id/textview4"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="1dp"
				android:paddingRight="1dp"
				android:paddingBottom="1dp"
				android:text="View on Github"
				android:textSize="12sp"
				android:textStyle="bold"
				android:textColor="#9E9E9E"/>
			<ImageView
				android:id="@+id/imageview4"
				android:focusable="false"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_marginLeft="2dp"
				android:padding="3dp"
				android:src="@drawable/redirect"
				android:scaleType="centerCrop"/>
		</LinearLayout>
		<TextView
			android:id="@+id/textview5"
			android:focusable="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="©MrZ 2023-24"
			android:textSize="12sp"
			android:textStyle="bold"
			android:textColor="#9E9E9E"
			android:layout_weight="1"/>
	</LinearLayout>
</LinearLayout>
