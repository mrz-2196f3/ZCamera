<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/base_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#000000"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/cam_controls"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/layout_controls"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@android:color/transparent"
				android:gravity="bottom"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/layout_controls2"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_weight="1">
					<LinearLayout
						android:id="@+id/top_controls"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:padding="5dp"
						android:background="@drawable/controls_background"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/flash"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_marginLeft="5dp"
							android:padding="5dp"
							android:background="@android:color/transparent"
							android:src="@drawable/flash_off"
							android:scaleType="centerCrop"/>
						<ImageView
							android:id="@+id/countdown"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_marginLeft="5dp"
							android:padding="5dp"
							android:background="@android:color/transparent"
							android:src="@drawable/timer_off"
							android:scaleType="centerCrop"/>
					</LinearLayout>
					<TextView
						android:id="@+id/text_countdown"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="MrZ"
						android:textSize="40sp"
						android:textStyle="bold"
						android:textColor="#E040FB"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/bottom_controls"
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@drawable/controls_background"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/ic_info"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginRight="50dp"
						android:padding="5dp"
						android:src="@drawable/about_info"
						android:scaleType="fitCenter"/>
					<LinearLayout
						android:id="@+id/bg_takephoto"
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:layout_margin="3dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/ic_takephoto"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_margin="5dp"
							android:src="@drawable/capture"
							android:scaleType="fitCenter"/>
					</LinearLayout>
					<ImageView
						android:id="@+id/ic_facing"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginLeft="50dp"
						android:padding="5dp"
						android:src="@drawable/facing_rear"
						android:scaleType="fitCenter"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
